<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animaux menacés par pays</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Animaux menacés par pays</h1>
        <form action="/" method="GET">
            <select name="country" id="country" onchange="this.form.submit()">
                <option value="">Sélectionnez un pays</option>
                <% countries.forEach(function(country) { %>
                    <option value="<%= country %>" <%= country === selectedCountry ? 'selected' : '' %>><%= country %></option>
                <% }); %>
            </select>
        </form>
        <input type="text" id="search" placeholder="Rechercher un animal..." onkeyup="filterAnimals()">
        <div class="grid">
            <% animals.forEach(function(animal) { %>
                <div class="card" data-name="<%= animal.name.toLowerCase() %>">
                    <img src="<%= animal.image %>" alt="<%= animal.name %>">
                    <h2><%= animal.name %></h2>
                    <p><%= animal.status %></p>
                </div>
            <% }); %>
        </div>
    </div>
    <script>
        function filterAnimals() {
            let input = document.getElementById("search").value.toLowerCase();
            let cards = document.querySelectorAll(".card");
            cards.forEach(card => {
                let name = card.getAttribute("data-name");
                card.style.display = name.includes(input) ? "block" : "none";
            });
        }
    </script>
</body>
</html>
